<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/primaryColorDark"
        android:elevation="4dp"
        android:theme="@style/ToolbarTheme"
        app:popupTheme="@style/ToolbarPopupTheme"
        app:titleTextAppearance="@style/ToolbarTitleStyle" />

    <!--首页Fragment切换-->
    <FrameLayout
        android:id="@+id/fl_main_fms"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_main_buttomNav"
        android:layout_below="@+id/tb_main_toolbar"></FrameLayout>

    <!--底部导航栏-->
    <LinearLayout
        android:id="@+id/ll_main_buttomNav"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#3b000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onMain_Layout_ClassClicked"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_Main_class"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="0dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_class" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课堂" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onMain_Layout_ConversationClicked"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_Main_conversation"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="0dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_msg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消息" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onMain_Layout_FriendClicked"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_Main_friend"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="0dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_friend" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="好友" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="onMain_Layout_MineClicked"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_Main_mine"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="0dp"
                    android:scaleType="center"
                    android:src="@drawable/ic_mine" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
