<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/primaryColorGray" />
                    <corners android:radius="4dp" />
                    <stroke android:width="1px" android:color="@color/primaryColorStroke" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="4dp" />
                    <stroke android:width="4px" android:color="@color/primaryColorDefault" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>